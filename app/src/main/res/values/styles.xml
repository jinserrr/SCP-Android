<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Toolbar样式-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    <!--Toolbar弹出菜单样式-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DayTheme" parent="AppTheme">
        <item name="toolbarBg">@color/colorPrimaryDark</item>
        <item name="containerBg">@color/white</item>
        <item name="itemBg">@color/itemBg</item>
        <!--浅色底深色字-->
        <item name="darkText">@color/darkText</item>
        <!--深色底浅色字-->
        <item name="lightText">@color/lightText</item>
        <item name="unClickBtn">@color/unClickBtn</item>
        <item name="clickedBtn">@color/clickedBtn</item>
    </style>
    <style name="NightTheme" parent="AppTheme">
        <item name="toolbarBg">@color/toolbarBgNight</item>
        <item name="containerBg">@color/containerBgNight</item>
        <item name="itemBg">@color/itemBgNight</item>
        <!--浅色底深色字-->
        <item name="darkText">@color/darkText</item>
        <!--深色底浅色字-->
        <item name="lightText">@color/lightText</item>
        <item name="unClickBtn">@color/unClickBtnNight</item>
        <item name="clickedBtn">@color/clickedBtnNight</item>
    </style>
</resources>
