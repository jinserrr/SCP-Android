<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.free.scp.view.home.SeriesFragment"
    android:background="?attr/containerBg">

    <TextView
        android:id="@+id/tv_series_doc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/img_logo"
        android:gravity="center"
        android:text="@string/title_scp_documents"
        android:textColor="?attr/darkText"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_story_doc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/tv_other_doc"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_other_doc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/img_logo_cn"
        android:gravity="center"
        android:text="@string/title_other_documents"
        android:textColor="?attr/darkText"
        app:layout_constraintBottom_toTopOf="@+id/tv_about_doc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_series_doc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_story_doc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/img_break_logo_3"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/title_scp_story"
        android:textColor="?attr/darkText"
        app:layout_constraintBottom_toTopOf="@+id/tv_direct_doc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/tv_about_doc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_series_doc" />


    <TextView
        android:id="@+id/tv_about_doc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="21dp"
        android:background="@drawable/img_other_logo"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/title_about_documents"
        android:textColor="?attr/darkText"
        app:layout_constraintBottom_toTopOf="@+id/tv_random"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_story_doc"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_doc" />

    <TextView
        android:id="@+id/tv_direct_doc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/img_break_logo_1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/title_direct"
        android:textColor="?attr/darkText"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/tv_random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_story_doc" />

    <TextView
        android:id="@+id/tv_random"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/img_random_logo"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/menu_random"
        android:textColor="?attr/darkText"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_direct_doc"
        app:layout_constraintTop_toBottomOf="@id/tv_about_doc" />


</android.support.constraint.ConstraintLayout>
